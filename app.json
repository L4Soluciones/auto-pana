{
  "expo": {
    "name": "Auto Pana",
    "slug": "auto-pana",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "autopana",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.autopana.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Auto Pana usa tu ubicacion para rastrear automaticamente los kilometros de tus viajes.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Auto Pana usa tu ubicacion para rastrear automaticamente los kilometros de tus viajes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFD700",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.autopana.app",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFD700",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Auto Pana usa tu ubicacion para rastrear automaticamente los kilometros de tus viajes."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "71372bcf-0613-48d3-ad4b-221d3ee7f579"
      }
    }
  }
}
