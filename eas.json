{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "image": "latest",
        "credentialsSource": "remote"
      },
      "ios": {
        "image": "latest"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "image": "latest",
        "buildType": "apk",
        "credentialsSource": "remote"
      },
      "ios": {
        "image": "latest"
      }
    },
    "production": {
      "android": {
        "image": "latest",
        "credentialsSource": "remote",
        "withoutCredentials": true
      },
      "ios": {
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
